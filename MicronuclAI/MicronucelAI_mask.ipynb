#MASK GENERATION FOR +/+ +/- and -/+ 
import numpy as np
import pandas as pd
from skimage import io
import napari

# Load raw data and mask
raw = io.imread("C:/Users/Korisnik/Desktop/RAM/Kreso_praksa/N-2011-15-1_Restain_hBN220216_4903-46485.ome.tif")
mask = io.imread("C:/Users/Korisnik/Desktop/RAM/Kreso_praksa/mesmer-N-2011-15-1_Restain_hBN220216_4903-46485/cell.tif")
df = pd.read_csv("C:/Users/Korisnik/Desktop/RAM/Kreso_praksa/N-2011-15-1_Restain_hBN220216_4903-46485_cell_predictions.csv")
quant_df = pd.read_csv("C:/Users/Korisnik/Desktop/RAM/Kreso_praksa/N-2011-15-1_Restain_hBN220216_4903-46485--mesmer_cell.csv")

#applying cutoff
quant_df['micronuclei'] = df['micronuclei'].values
print(quant_df.head())

# Create boolean columns based on cutoff thresholds
quant_df['SOX10_bool'] = quant_df['SOX10'] > 1 #Flroain suggests 1
quant_df['CD138_bool'] = quant_df['CD138'] > 1.6312074160575833
quant_df['CD68_bool'] = quant_df['CD68'] > 1.756449425220487

DAPI = raw[0]
Cancer = raw[5]

# --- Create category column based on conditions ---
conditions = [
    (quant_df['SOX10_bool'] == True) & (quant_df['micronuclei'] > 0),   # 1
    (quant_df['SOX10_bool'] == True) & (quant_df['micronuclei'] == 0),  # 2
    (quant_df['SOX10_bool'] == False) & (quant_df['micronuclei'] > 0)   # 3
]
values = [3, 2, 1]

quant_df['category'] = np.select(conditions, values, default=0)

# --- Create new mask ---
new_mask = np.zeros_like(mask)
cell_color_map = pd.Series(quant_df['category'].values, index=quant_df['CellID'])

mask_flat = mask.ravel()
mapped_flat = np.vectorize(lambda x: cell_color_map.get(x, 0))(mask_flat)
new_mask = mapped_flat.reshape(mask.shape)

# --- Napari viewer ---
viewer = napari.Viewer()
viewer.add_image(DAPI, name='DAPI', colormap='blue')
viewer.add_image(Cancer, name='Cancer', opacity=0.5, colormap='yellow')

labels_layer = viewer.add_labels(new_mask, name='SOX10/Micronuclei Mask', opacity=0.5)
labels_layer.color = {
    1: 'red',    # SOX10- , micronuclei > 0 
    2: 'blue',   # SOX10+ , micronuclei = 0
    3: 'green'   # SOX10+ , micronuclei > 0
}

napari.run()
